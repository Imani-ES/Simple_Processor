module DataMemory(
    input [7:0] a, address,
    input write,
    input read,
    output reg [7:0] out
    );
    reg [7:0] mem [255:0];
    integer i = 0;
    initial begin
        while(i <= 255)
            mem[i] = 8'b00000000;
            i = i+1;
        end
        
    always @ (*) begin
    if (write == 1)
        mem[address] = a; //write something in memory location
    else if (read == 1)
        out = mem[address]; //find address and put in ouput
    end  
endmodule
